{
  "name": "lineputscript",
  "displayName": "LinePutScript",
  "description": "LinePutScript-Formatter",
  "publisher": "Hakoyu",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.81.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/imliam/vscode-inline-parameters"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:lineputscript.format",
    "onLanguage:lps"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lineputscript.format",
        "title": "LinePutScript Format"
      }
    ],
    "languages": [
      {
        "id": "lps",
        "aliases": [
          "lps",
          "lps"
        ],
        "extensions": [
          ".lps"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lps",
        "scopeName": "source.lps",
        "path": "./syntaxes/lps.tmLanguage.json"
      }
    ],
    "configuration": [
      {
        "title": "LinePutScript Formatter",
        "properties": {
          "lineputscript.lineFeedThreshold": {
            "type": "number",
            "description": "Line feed threshold",
            "default": 64
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
