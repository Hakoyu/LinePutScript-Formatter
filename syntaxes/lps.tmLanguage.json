{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "lps",
  "scopeName": "source.lps",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "comment",
          "match": "^[ \t]*///.*"
        },
        {
          "name": "entity.name.class.subSplit",
          "match": ":\\|"
        },
        {
          "name": "markup.bold.dataSplit",
          "match": "#"
        },
        {
          "name": "keyword.control.import.lineKey",
          "match": "^[^#:\\|]+"
        },
        {
          "name": "variable.key",
          "match": "(?:(?<=:\\|)[^\n][^#]+)|(?:^[^:\\|]+)"
        },
        {
          "name": "invalid",
          "match": "[^#]+(?<!:\\|[ \t]*)\\n"
        },
        {
          "name": "string.data",
          "match": "(?<=#)[^:\\|\n]+(?=:\\|)"
        },
        {
          "name": "invalid",
          "match": ".*"
        }
      ]
    },

    "strings": {
      "name": "string",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "string",
          "match": "\\\\."
        }
      ]
    }
  }
}
